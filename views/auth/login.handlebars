<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/png" href="/images/sgar-favicon.png">

  <title>Login | SGAR</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- AdminLTE 4 -->
  <link rel="stylesheet" href="/adminlte/css/adminlte.min.css" />

  <!-- Bootstrap Icons (Google icon) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    rel="stylesheet"
  />
</head>

<body class="bg-light">

<div class="container min-vh-100 d-flex align-items-center justify-content-center">

  <div class="card shadow-lg border-0" style="width: 100%; max-width: 420px;">
    <div class="card-body p-4">

      <!-- TÍTULO -->
      <div class="text-center mb-4">
        <img
  src="/images/sgar-logo.png"
  alt="SGAR"
  style="max-width: 180px;"
  class="mb-2"
/>
        <p class="text-muted mb-0">Sistema de Gerenciamento de Acesso Remoto</p>
      </div>

      <!-- FORM LOGIN -->
      <form action="/login" method="POST">

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            name="email"
            class="form-control form-control-lg"
            placeholder="seu@email.com"
            required
          />
        </div>

        <div class="mb-2">
          <label class="form-label">Senha</label>
          <input
            type="password"
            name="password"
            class="form-control form-control-lg"
            placeholder="••••••••"
            required
          />
        </div>

        <!-- ESQUECI A SENHA -->
        <div class="text-end mb-3">
          <a href="/forgot-password" class="text-decoration-none small">
            Esqueci minha senha
          </a>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">
          Entrar
        </button>

      </form>

      <!-- DIVISOR -->
      <div class="text-center my-4 text-muted small">
        ou
      </div>

      <!-- LOGIN GOOGLE -->
      <a href="/auth/google" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2">
        <i class="bi bi-google"></i>
        Entrar com Google
      </a>

      <!-- REGISTRO -->
      <div class="text-center mt-4">
        <span class="text-muted small">Não tem conta?</span>
        <a href="/register" class="fw-semibold text-decoration-none">
          Criar conta
        </a>
      </div>

    </div>
  </div>

</div>

</body>
</html>
